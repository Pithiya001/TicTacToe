<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/ll_main_scoreContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >
    <TextView
        android:id="@+id/txt_main_scoreX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Score X:-"
        android:textSize="26sp"
        />
    <TextView
        android:id="@+id/txt_main_scoreO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Score O:-"
        android:textSize="25sp"
        />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toStartOf="@id/verticalLine1"
        android:layout_marginEnd="8dp"
        android:layout_above="@+id/horizontalLine1"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/img_main_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/verticalLine1"
        android:layout_above="@+id/horizontalLine1"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/img_main_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/verticalLine2"
        android:layout_marginStart = "8dp"
        android:layout_above="@+id/horizontalLine1"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/img_main_btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/horizontalLine1"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_height="8dp"
        android:background="@color/linecolor"
        android:layout_above="@+id/rl_btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />
    <RelativeLayout
        android:id="@+id/rl_btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/img_main_btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/verticalLine1"
        >
        <ImageView
            android:id="@+id/img_main_btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/horizontalLine2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginStart="40dp"
        android:background="@color/linecolor"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rl_btn5"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/verticalLine1"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/linecolor"
        android:layout_toStartOf="@id/rl_btn5"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="170dp"
        android:layout_marginEnd="8dp"
        />

    <RelativeLayout
        android:id="@+id/verticalLine2"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/linecolor"
        android:layout_toEndOf="@id/rl_btn5"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="170dp"
        android:layout_marginStart="8dp"
        />

    <RelativeLayout
        android:id="@+id/rl_btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/verticalLine2"
        >
        <ImageView
            android:id="@+id/img_main_btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/verticalLine1"
        android:layout_below="@id/horizontalLine2"
        android:layout_marginTop="8dp"
        >

        <ImageView
            android:id="@+id/img_main_btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/verticalLine1"
        android:layout_below="@id/horizontalLine2"
        android:layout_marginTop="8dp"
        >

        <ImageView
            android:id="@+id/img_main_btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/verticalLine2"
        android:layout_below="@id/horizontalLine2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        >

        <ImageView
            android:id="@+id/img_main_btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_main_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />


</RelativeLayout>